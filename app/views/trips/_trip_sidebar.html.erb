<aside class="col-md-3 trip_sidebar">
	<div class="trip_info">
		<%= link_to root_url, class: "btn-sm inline pull-left" do %>
			<span class="glyphicon glyphicon-arrow-left"></span>
			<span class="glyphicon glyphicon-th-list"></span>
		<% end %>
		<h3><%= @trip.name %></h3>
	</div>
	<hr>
	<div class="add_location center"
		<% if @trip.user == current_user %>
			<!-- Button trigger modal -->
				<button type="button" class="btn" data-toggle="modal" data-target="#newLocModal">
				  <span class="glyphicon glyphicon-plus"></span> Location
				</button>
				<%= render 'shared/new_loc_modal' %>
			<hr>
		<% end %>
	</div>
	<div class="loc-list">
		<ol class="locations">
			<% @trip.locations.each do |location| %>
				<li><%= location.name %></li>
			<% end %>
		</ol>
	</div>
</aside>
