<aside class="col-md-4 trip_sidebar">
	<section class="trip_info">
		<%= link_to root_url, class: "btn-sm inline pull-left" do %>
			<span class="glyphicon glyphicon-arrow-left"></span>
			<span class="glyphicon glyphicon-th-list"></span>
		<% end %>
		<h1><%= @trip.name %></h1>
	</section>
	<hr>
	<% if @trip.user == current_user %>
		<div class="add_loc center">
			<%= link_to '#', class: "btn center" do %>
				<span class="glyphicon glyphicon-plus"></span> Location
			<% end %>
		</div>
		<hr>
	<% end %>
	<section class="loc-list">
		<%= render 'trip_locations' %>
	</section>
</aside>
