<% provide(:title, 'New trip') %>
<h1>Create new trip</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@trip) do |f| %>
			<%= render 'shared/error_messages', object: f.object %> <!-- render partial -->

			<%= f.label :trip_name %>
			<%= f.text_field :name, class: 'form-control' %>

			<%= f.label :description %>
			<%= f.text_field :description, class: 'form-control' %>

			<%= f.label :start_location %>
			<%= f.text_field :start_loc, class: 'form-control' %>

			<%= f.label :end_location %>
			<%= f.text_field :end_loc, class: 'form-control' %>

			<%= f.submit "Create trip", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>